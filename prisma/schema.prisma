generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CITIZEN
  ADMIN
  OFFICER
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum NotificationType {
  ISSUE_CREATED
  STATUS_CHANGED
  SLA_WARNING
  SLA_BREACH
}

model User {
  id    Int     @default(autoincrement()) @id
  firstname String?
  lastname String?
  email String  @unique
  password String
  CreatedAt DateTime @default(now())
  blocked Boolean?
  mobile String?
  address String?

  role Role @default(CITIZEN)

  officer Officer?
  issue Issue[] @relation("CitizenIssues")
  notification Notification[]
}

model Department {
  id Int       @default(autoincrement()) @id
  name String @unique
  CreatedAt DateTime @default(now())

  Officers Officer[]
  issue Issue[]
  slaRules  SlaRule[]

}

model Officer {
  id Int      @default(autoincrement()) @id
  userId Int  @unique
  departmentId Int
  area         String
  isActive     Boolean @default(true)

  user  User  @relation(fields:[userId],references:[id])
  department Department @relation(fields:[departmentId],references:[id])
  assignedIssues Issue[]
}

model Issue {
  id            Int         @default(autoincrement())  @id 
  title         String
  description   String
  imageUrl      String?
  address       String
  landmark      String?
  category      String?
  area          String?
  status        IssueStatus @default(OPEN)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  citizenId     Int
  departmentId  Int?
  officerId     Int?
  slaDeadline   DateTime?

  citizen    User        @relation("CitizenIssues", fields: [citizenId], references: [id])
  department Department?  @relation(fields: [departmentId], references: [id])
  officer    Officer?    @relation(fields: [officerId], references: [id])

  statusHistory IssueStatusHistory[] 
  notification  Notification[]

  @@index([slaDeadline])
  slaBreached      Boolean   @default(false)
  escalationLevel  Int       @default(0)


}

model IssueStatusHistory {
  id   Int @default(autoincrement()) @id
  issueId Int
  oldStatus IssueStatus
  newStatus IssueStatus
  changedBy Int
  changedAt DateTime   @default(now())

  issue Issue @relation(fields: [issueId], references: [id])
}

model SlaRule {
  id           Int      @id @default(autoincrement())
  departmentId Int
  hours        Int
  createdAt    DateTime @default(now())

  department Department @relation(fields: [departmentId], references: [id])
}

model Notification {
  id        Int              @id @default(autoincrement())
  userId    Int
  issueId   Int?
  type      NotificationType
  message   String
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  user  User  @relation(fields: [userId], references: [id])
  issue Issue? @relation(fields: [issueId], references: [id])
}
